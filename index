<body>
    <div class="card-container">
        <h2>üìÑ Image/PDF to Text Extractor</h2>

        <form id="upload-form">
            <div class="mb-3">
                <label for="file" class="form-label">Choose Images or PDFs:</label>
                <input type="file" name="files[]" id="file" class="form-control" multiple required>
            </div>

            <div class="mb-3">
                <label class="form-label">Choose Language:</label>
                <select name="language" class="form-select" id="language">
				<option value="ben">Bangla</option>
                    <option value="eng">English</option>
                    
                </select>
            </div>

            <button type="submit" class="btn btn-primary">üîç Extract Text</button>
        </form>

        <div class="mt-4">
            <label for="result" class="form-label">Extracted Text:</label>
            <textarea id="result" class="form-control" placeholder="Text will appear here..."></textarea>
            <button onclick="copyText()" class="btn btn-success mt-2">üìã Copy Text</button>
        </div>
    </div>

<script>
document.getElementById('upload-form').addEventListener('submit', async function(e) {
    e.preventDefault();

    const formData = new FormData();
    const files = document.getElementById('file').files;
    const language = document.getElementById('language').value;

    for (let i = 0; i < files.length; i++) {
        formData.append('files[]', files[i]);
    }
    formData.append('language', language);

    const resultBox = document.getElementById('result');
    resultBox.value = "‚è≥ Extracting text...";

    try {
        const res = await fetch('/upload', {
            method: 'POST',
            body: formData
        });
        const data = await res.json();
        resultBox.value = data.text || "‚ùå No text found.";
    } catch (err) {
        console.error(err);
        resultBox.value = "‚ùå Error occurred.";
    }
});

function copyText() {
    const textarea = document.getElementById("result");
    textarea.select();
    textarea.setSelectionRange(0, 99999);
    document.execCommand("copy");
    
}
</script>
